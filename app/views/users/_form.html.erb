<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>
      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="container">
    <div class="row">
      <div class="col-md-2 col-lg-2 " align="center">
      </div>
      <div class="col-md-8 col-lg-8 " align="center">
        <div class="panel panel-default">
          <div class="panel-body">
            <div class="row">
              <div class="col-md-3 col-xs-3 table_title">
                <p class="help-block"></p>
                <label class="control-label">Name</label>
                <p class="help-block"></p>
              </div>
              <div class="col-md-9 col-xs-9">
                <div class="controls">
                  <p class="help-block"></p>
                  <%= f.text_field :name, class:"form-control" %>
                  <p class="help-block"></p>
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col-md-3 col-xs-3 table_title">
                <p class="help-block"></p>
                <label class="control-label">User Name</label>
                <p class="help-block"></p>
              </div>
              <div class="col-md-9 col-xs-9">
                <div class="controls">
                  <p class="help-block"></p>
                  <%= f.text_field :user_name, class:"form-control" %>
                  <p class="help-block"></p>
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col-md-3 col-xs-3 table_title">
                <p class="help-block"></p>
                <label class="control-label">E-mail</label>
                <p class="help-block"></p>
              </div>
              <div class="col-md-9 col-xs-9">
                <div class="controls">
                  <p class="help-block"></p>
                  <%= f.text_field :email, class:"form-control" %>
                  <p class="help-block"></p>
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col-md-3 col-xs-3 table_title">
                <p class="help-block"></p>
                <label class="control-label">Password</label>
                <p class="help-block"></p>
              </div>
              <div class="col-md-9 col-xs-9">
                <div class="controls">
                  <p class="help-block"></p>
                  <%= f.password_field :password, :require => true, class:"form-control" %>
                  <p class="help-block"></p>
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col-md-3 col-xs-3 table_title">
                <p class="help-block"></p>
                <label class="control-label">Password Confirmation</label>
                <p class="help-block"></p>
              </div>
              <div class="col-md-9 col-xs-9">
                <div class="controls">
                  <p class="help-block"></p>
                  <%= f.password_field :password_confirmation, :require => true, class:"form-control" %>
                  <p class="help-block"></p>
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col-md-3 col-xs-3 table_title">
                <p class="help-block"></p>
                <label class="control-label">Role</label>
                <p class="help-block"></p>
              </div>
              <div class="col-md-9 col-xs-9">
                <div class="controls">
                  <p class="help-block"></p>
                  <%= f.number_field :role, class:"form-control" %>
                  <p class="help-block"></p>
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col-md-3 col-xs-3 table_title">
                <p class="help-block"></p>
                <label class="control-label">Avatar</label>
                <p class="help-block"></p>
              </div>
              <div class="col-md-9 col-xs-9">
                <div class="controls">
                  <p class="help-block"></p>
                  <%= f.file_field :image, class:"form-control" %>
                  <p class="help-block"></p>
                </div>
              </div>
            </div>
            <div class="row">
              <%= f.submit "Submit", class: "btn btn-primary"%>
              <%= link_to 'Back', users_path,class: "btn btn-default" %>
            </div>
          </div>
        </div>
      </div>
      <div class="col-md-2 col-lg-2 " align="center">
      </div>
    </div>
  </div>


<% end %>
