<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
    <div class="container">
    	<div class="row">
    		 <form class="form-horizontal">
                <fieldset>

                    <div class="col-md-6">
                        <label class="control-label">Name</label>
                        <div class="controls">
                          <%= f.text_field :name, class:"form-control" %>
                            <p class="help-block"></p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <label class="control-label">User Name</label>
                        <div class="controls">
                          <%= f.text_field :user_name, class:"form-control" %>
                            <p class="help-block"></p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <label class="control-label">E-mail</label>
                        <div class="controls">
                          <%= f.text_field :email, class:"form-control" %>
                            <p class="help-block"></p>
                        </div>
                    </div>

                    <!-- city input-->
                    <div class="col-md-6">
                        <label class="control-label">Password</label>
                        <div class="controls">
                          <%= f.password_field :password, :require => true, class:"form-control" %>
                            <p class="help-block"></p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <label class="control-label">Password confirmation</label>
                        <div class="controls">
                          <%= f.password_field :password_confirmation, :require => true, class:"form-control" %>
                            <p class="help-block"></p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <label class="control-label">Role</label>
                        <div class="controls">
                          <%= f.number_field :role, class:"form-control" %>
                            <p class="help-block"></p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <label class="control-label">Image</label>
                        <div class="controls">
                          <%= f.file_field :image, class:"form-control" %>
                            <p class="help-block"></p>
                        </div>
                    </div>

                </fieldset>
                <%= f.submit "Submit", class: "btn btn-primary"%>
                <%= link_to 'Back', users_path,class: "btn btn-default" %>
            </form>
    	</div>
    </div>

<% end %>
