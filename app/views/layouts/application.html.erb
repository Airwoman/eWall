<!DOCTYPE html>
<html>
<head>
  <title>Login</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>



<nav>

  <% if @current_user && @current_user.role == 1 %>
    <%= link_to "All users", users_path%>
    <%= link_to "View profile", @current_user %>
    <%= link_to "Edit profile", edit_user_path(@current_user) %>
    <%= link_to "Delete profile", user_path(@current_user), :method => :delete %>
    <%= link_to "Create Group", new_group_path%>
    <%= link_to "Group list", groups_path%>
    <%= link_to "Log out", logout_path, :method => :delete%>
  <% elsif @current_user && @current_user.role != 1 %>
    <%= link_to "View profile", @current_user %>
    <%= link_to "Edit profile", edit_user_path(@current_user) %>
    <%= link_to "Create Group", new_group_path%>
    <%= link_to "Group list", groups_path%>

    <%= link_to "Log out", logout_path, :method => :delete%>
  <% else %>
    <%= link_to "Create an account", new_user_path%>
    <%= link_to "Log in", login_path%>
  <% end %>
</nav>




  <% if @current_user %>
  <p>
    Your email is <%= @current_user.email %>
  </p>
  <% end %>
  <% if flash[:success]%>
  <p>
    <%= flash[:success]%>
  </p>
  <%end%>
  <% if flash[:error]%>
  <p>
    <%= flash[:error]%>
  </p>
  <%end%>

<%= yield %>

</body>
</html>
