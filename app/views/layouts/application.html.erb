<!DOCTYPE html>
<html>
<head>
  <title>Login</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <link rel="stylesheet" href="/assets/jquery-ui.css">
  <link rel="stylesheet" href="/assets/font-awesome.min.css" media="screen" title="no title" charset="utf-8">
  <link rel="stylesheet" type="text/css" href="/assets/custom.css" />
  <link rel="stylesheet" type="text/css" href="/assets/demo.css" />
  <link rel="stylesheet" href="/assets/bootstrap.min.css" media="screen" title="no title" charset="utf-8">
  <link type="text/css" rel="stylesheet" href="/assets/slicebox.css" />
  <link href="/assets/KaushanScript-Regular.ttf" rel='stylesheet' type='text/css'>
  <script src="/assets/jquery.easing.min.js"></script>
  <script src="/assets/jquery-ui.js"></script>
  <script type="text/javascript" src="/assets/modernizr.min.js"></script>
  <script type="text/javascript" src="/assets/jquery.slicebox.js"></script>
  <link rel="stylesheet" href="/assets/jquery.fancybox.css?v=2.1.5" type="text/css" media="screen" />
  <script type="text/javascript" src="/assets/jquery.fancybox.pack.js?v=2.1.5"></script>



</head>
<body>
  <div class="menu">
    <nav class="navbar navbar-default">
  <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to "Home", root_path, class:"navbar-brand"%>
    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">



      <% if @current_user && @current_user.role == 1 %>
      <ul class="nav navbar-nav">
        <li><%= link_to "All users", users_path%></li>
        <li><%= link_to "Create Group", new_group_path%></li>
        <li><%= link_to "Group list", groups_path%></li>
        <li><%= link_to "All Photos", photos_path%></li>
        <li><%= link_to "Create photo", new_photo_path%></li>

      </ul>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "Hi,#{@current_user.name}", @current_user  %></li>
        <li><%= link_to "Log out", logout_path, :method => :delete%></li>
      </ul>

      <% elsif @current_user && @current_user.role != 1 %>
      <ul class="nav navbar-nav">
        <li><%= link_to "My E-wall", wall_path(@current_user.id)%></li>
        <li><%= link_to "Create Group", new_group_path%></li>
        <li><%= link_to "Group list", groups_path%></li>
        <li><%= link_to "Photos", photos_group_path(@current_user.id)%></li>
        <li><%= link_to "Upload photos", new_photo_path%></li>

      </ul>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "Hi,#{@current_user.name}", @current_user  %></li>
        <li><%= link_to "Log out", logout_path, :method => :delete%></li>
      </ul>

      <% else %>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "SignUp", new_user_path%></li>
        <li><%= link_to "Login", login_path%></li>
      </ul>
      <% end %>
    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</nav>
  </div>



  <% if flash[:success]%>
  <p>
    <%= flash[:success]%>
  </p>
  <%end%>
  <% if flash[:error]%>
  <p>
    <%= flash[:error]%>
  </p>
  <%end%>

<%= yield %>


</body>
</html>
