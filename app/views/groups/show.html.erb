<p id="notice"><%= notice %></p>

<div class="container pages">
  <div class="row">
  <div class="col-md-5  toppad  pull-right col-md-offset-3 ">
  </div>
    <div class="col-xs-12 col-sm-12 col-md-8 col-lg-8 col-xs-offset-0 col-sm-offset-0 col-md-offset-2 col-lg-offset-2 toppad" >
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title"><%= @group.name %></h3>
        </div>
        <div class="panel-body">
          <div class="row">
            <div class=" col-md-12 col-lg-12 ">
              <table class="table table-user-information">
                <tbody>
                  <tr>
                    <td><strong>Group name : </strong></td>
                    <td><%= @group.name %></td>
                  </tr>
                  <tr>
                    <td><strong>Creator : </strong></td>
                    <td><%= @creator.name%>
                    </td>
                  </tr>
                  <tr>
                    <td><strong>Group Members : </strong></td>
                    <td><%= @group.users.count() %></td>
                  </tr>
                  <tr>
                    <td><strong>Group Photos Number : </strong></td>
                    <td><%= @group.photos.count() %></td>
                  </tr>
                </tbody>
              </table>
            </div>
          </div>
        </div>
        <div class="panel-footer">
         <%= link_to groups_path, class:"btn btn-sm btn-primary" do%>
         <i class="fa fa-arrow-circle-left fa-2x" aria-hidden="true"></i>
         <% end %>
         <% if @current_user && @current_user.id == @group.creator_id || @current_user.role == 1%>
            <span class="pull-right">
              <%= link_to edit_group_path(@group), class:"btn btn-sm btn-warning" do%>
              <i class="fa fa-pencil-square-o fa-2x" aria-hidden="true"></i>
              <% end %>
              <%= link_to @group, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-sm btn-primary" do%>
              <i class="fa fa-trash-o fa-2x" aria-hidden="true"></i>
              <% end %>
            </span>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
